<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="10dp"
              android:background="@color/bg_common_gray_f9f9f9"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_top_corners">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_financial_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="中铁三号"
                android:textColor="@color/txt_black_333333"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持有份额（元）："
                    android:textColor="@color/txt_black_333333"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product_holding_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200000000.00"
                    android:textColor="@color/txt_black_333333"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计收益（元）："
                    android:textColor="@color/txt_black_333333"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product_expect_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10600.00"
                    android:textColor="@color/txt_red_fc514e"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_product_state"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:src="@mipmap/img_finacial_state_one"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_light_gray_down_corners"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_time"
            android:text="投资周期："
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_product_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/06/01-2019/06/30"
            android:textSize="11sp"/>
    </LinearLayout>

</LinearLayout>
