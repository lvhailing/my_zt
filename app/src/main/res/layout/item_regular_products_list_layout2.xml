<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <!-- 已售罄布局 -->
    <RelativeLayout
        android:id="@+id/rl_product_on_sell_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@drawable/shape_bg_white_down_shadow"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_left_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_regular_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="堪设三号"
                android:textColor="@color/txt_black_333333"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_product_annualized_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="6.12%"
                android:textColor="@color/txt_red_fc514e"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/tv_income_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="预期年化收益率"
                android:textColor="@color/txt_black_333333"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_product_state"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_alignBottom="@id/ll_left_product_name"
            android:layout_alignParentRight="true"
            android:background="@mipmap/img_regular_product_sell_out"/>

        <LinearLayout
            android:id="@+id/ll_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_product_state"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_product_state"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_product_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="31"
                    android:textColor="@color/txt_black_333333"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_product_cycle"
                    android:text="天"
                    android:textColor="@color/txt_black_333333"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_initial_investment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10万元起投"
                android:textColor="@color/txt_black_333333"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

