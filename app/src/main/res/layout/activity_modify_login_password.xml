<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_change_login_password_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/old_login_password"
            android:textColor="@color/txt_black_333333"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_change_login_password_old"
            android:background="@color/transparent"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/gray_d"
            android:textCursorDrawable="@drawable/bg_et_cursor"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_delete_old_password"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_change_login_password_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/new_login_password"
            android:textColor="@color/txt_black_333333"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_change_login_password_new"
            android:background="@color/transparent"
            android:hint="请设置6-8位登录密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/gray_d"
            android:textCursorDrawable="@drawable/bg_et_cursor"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_delete_new_password"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_change_login_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/confirm_login_password"
            android:textColor="@color/txt_black_333333"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/tv_change_login_password_confirm"
            android:background="@color/transparent"
            android:hint="再次输入6-8位登录密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/gray_d"
            android:textCursorDrawable="@drawable/bg_et_cursor"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_delete_confirm_password"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_error_message"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="密码至少包括数字、字母、字符两种组合"
            android:textColor="@color/txt_black_666666"
            android:textSize="12sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn_shape_blue_0087fd"
        android:text="@string/btn_sure"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>